<Window
    x:Class="AioStudy.UI.Views.Components.TimerOverlayWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:MaIc="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:AioStudy.UI.Views.Components"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Timer"
    Width="280"
    Height="155"
    AllowsTransparency="True"
    Background="Transparent"
    ResizeMode="NoResize"
    ShowInTaskbar="False"
    Topmost="True"
    Visibility="{Binding IsVisible, Converter={StaticResource BoolToVisibilityConverter}}"
    WindowStyle="None"
    mc:Ignorable="d">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter" />
    </Window.Resources>

    <Border
        Background="#1F2024"
        BorderThickness="2"
        CornerRadius="12"
        MouseLeftButtonDown="Border_MouseLeftButtonDown">

        <Border.Resources>
            <!--  Storyboard als Resource definieren  -->
            <Storyboard x:Key="ColorChangeStoryboard">
                <ColorAnimation
                    Storyboard.TargetName="GradStop1"
                    Storyboard.TargetProperty="Color"
                    Duration="0:0:0.3">
                    <ColorAnimation.EasingFunction>
                        <QuadraticEase EasingMode="EaseInOut" />
                    </ColorAnimation.EasingFunction>
                </ColorAnimation>

                <ColorAnimation
                    Storyboard.TargetName="GradStop2"
                    Storyboard.TargetProperty="Color"
                    Duration="0:0:0.3">
                    <ColorAnimation.EasingFunction>
                        <QuadraticEase EasingMode="EaseInOut" />
                    </ColorAnimation.EasingFunction>
                </ColorAnimation>

                <ColorAnimation
                    Storyboard.TargetName="GradStop3"
                    Storyboard.TargetProperty="Color"
                    Duration="0:0:0.3">
                    <ColorAnimation.EasingFunction>
                        <QuadraticEase EasingMode="EaseInOut" />
                    </ColorAnimation.EasingFunction>
                </ColorAnimation>
            </Storyboard>
        </Border.Resources>

        <Border.BorderBrush>
            <LinearGradientBrush>
                <GradientStop x:Name="GradStop1" Offset="0.0" Color="{Binding GradientPopoutColor1, Converter={StaticResource StringToColorConverter}, FallbackValue=#608BC1}" />
                <GradientStop x:Name="GradStop2" Offset="0.5" Color="{Binding GradientPopoutColor3, Converter={StaticResource StringToColorConverter}, FallbackValue=#a5bacc}" />
                <GradientStop x:Name="GradStop3" Offset="1.0" Color="{Binding GradientPopoutColor2, Converter={StaticResource StringToColorConverter}, FallbackValue=#133E87}" />
            </LinearGradientBrush>
        </Border.BorderBrush>



        <Grid Margin="15">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!--  Header  -->
            <Grid Grid.Row="0" Margin="0,0,0,10">

                <Image
                    Width="18"
                    Height="18"
                    HorizontalAlignment="Left"
                    Source="/Assets/AioStudyLogo.png" />


                <TextBlock
                    Margin="25,0,0,0"
                    VerticalAlignment="Center"
                    FontSize="11"
                    FontWeight="SemiBold"
                    Foreground="#787C8E"
                    Text="{Binding TimerStatusString, FallbackValue='Timer running'}" />

                <Button
                    Width="20"
                    Height="20"
                    HorizontalAlignment="Right"
                    Background="Transparent"
                    BorderThickness="0"
                    Command="{Binding CloseCommand}"
                    Cursor="Hand">
                    <MaIc:MaterialIcon
                        Width="16"
                        Height="16"
                        Foreground="#787C8E"
                        Kind="Close" />
                </Button>
            </Grid>

            <!--  Timer Display  -->
            <StackPanel
                Grid.Row="1"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Orientation="Horizontal">
                <TextBlock
                    FontFamily="Arial Rounded MT Bold"
                    FontSize="42"
                    Foreground="#F2F2F2"
                    Text="{Binding Minutes, FallbackValue=12, StringFormat={}{0:00}}" />
                <TextBlock
                    Margin="4,0"
                    FontFamily="Arial Rounded MT Bold"
                    FontSize="42"
                    Foreground="#F2F2F2"
                    Text=":" />
                <TextBlock
                    FontFamily="Arial Rounded MT Bold"
                    FontSize="42"
                    Foreground="#F2F2F2"
                    Text="{Binding Seconds, FallbackValue=12, StringFormat={}{0:00}}" />
            </StackPanel>

            <!--  Control Buttons  -->
            <StackPanel
                Grid.Row="2"
                Margin="0,10,0,0"
                HorizontalAlignment="Center"
                Orientation="Horizontal">
                <Button
                    Width="35"
                    Height="35"
                    Margin="5,0"
                    Command="{Binding ControlTimerCommand}"
                    Cursor="Hand"
                    Style="{StaticResource GradientButton}">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="1"
                                CornerRadius="8">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                    <MaIc:MaterialIcon
                        Width="20"
                        Height="20"
                        Foreground="#F2F2F2">
                        <MaIc:MaterialIcon.Style>
                            <Style TargetType="MaIc:MaterialIcon">
                                <Setter Property="Kind" Value="Pause" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsPaused}" Value="True">
                                        <Setter Property="Kind" Value="Play" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </MaIc:MaterialIcon.Style>
                    </MaIc:MaterialIcon>
                </Button>

                <Button
                    Width="35"
                    Height="35"
                    Margin="5,0"
                    Command="{Binding ResetTimerCommand}"
                    Cursor="Hand"
                    Style="{StaticResource RedGradientButton}">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="1"
                                CornerRadius="8">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                    <MaIc:MaterialIcon
                        Width="20"
                        Height="20"
                        Foreground="#EF4444"
                        Kind="Restart" />
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</Window>
