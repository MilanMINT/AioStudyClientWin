<Window x:Class="AioStudy.UI.Views.Components.ConfirmModal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AioStudy.UI.Views.Components"
        mc:Ignorable="d"
        Title="ConfirmModal" Height="300" Width="500"
        WindowStyle="None" Background="Transparent"
        ResizeMode="NoResize"
        AllowsTransparency="True">


    <Border CornerRadius="6"
        BorderThickness="1.5" Background="#212226">
        <Border.BorderBrush>
            <LinearGradientBrush>
                <GradientStop Color="#eb2315" Offset="0.0"/>
                <GradientStop Color="#a13c35" Offset="1.0"/>
                <GradientStop Color="#f7968f" Offset="0.7"/>
            </LinearGradientBrush>
        </Border.BorderBrush>

        <Grid Margin="5">
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="1"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="1"/>
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>
            <TextBlock x:Name="HeadTextBlock" 
                        Text="{Binding Title, FallbackValue=Title}"
                        Foreground="#f2f2f2" 
                        FontSize="20"
                        FontWeight="Bold"
                        TextWrapping="Wrap" 
                        VerticalAlignment="Center" 
                        HorizontalAlignment="Center"/>

            <!-- Separator -->
            <Border Grid.Row="3" Grid.ColumnSpan="2" 
                    Background="#3A3D45" Height="1"
                    Margin="15 0 15 0"/>

            <!-- Separator -->
            <Border Grid.Row="1" Grid.ColumnSpan="2" 
                    Background="#3A3D45" Height="1"
                    Margin="15 0 15 0"/>

            <TextBlock x:Name="MessageTextBlock" 
                        Grid.Row="2"
                        Margin="20,10,20,10"
                        Text="{Binding Message, FallbackValue='Are you sure you want to proceed?'}"
                        Foreground="#e3e3e3" 
                        FontSize="16" 
                        TextWrapping="Wrap" 
                        VerticalAlignment="Top" 
                        HorizontalAlignment="Center"/>


            <StackPanel Grid.Row="4" Orientation="Horizontal" 
                        HorizontalAlignment="Center" 
                        Margin="0,0,0,0"
                        VerticalAlignment="Center">
                <Button x:Name="CancelButton" 
                        Command="{Binding CancelCommand}"
                        Style="{StaticResource GrayGradientButton}"
                        Content="Cancel" 
                        Width="100" 
                        Height="30" 
                        Margin="10,0" />
                <Button x:Name="ConfirmButton" 
                        Style="{StaticResource RedGradientButton}"
                        Command="{Binding ConfirmCommand}"
                        Content="Confirm" 
                        Width="100" Height="30" 
                        Margin="10,0" />
            </StackPanel>

        </Grid>

    </Border>
    
    

</Window>
