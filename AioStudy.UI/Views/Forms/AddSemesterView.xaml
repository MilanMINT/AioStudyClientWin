<Window
    x:Class="AioStudy.UI.Views.Forms.AddSemesterView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:AioStudy.UI.Views.Forms"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
    Title="AddSemesterView"
    Width="500"
    Height="700"
    AllowsTransparency="True"
    Background="Transparent"
    SnapsToDevicePixels="True"
    UseLayoutRounding="True"
    WindowStyle="None"
    mc:Ignorable="d">

    <Border
        Background="#212226"
        BorderThickness="1.5"
        CornerRadius="6">
        <Border.BorderBrush>
            <LinearGradientBrush>
                <GradientStop Offset="0.0" Color="#608BC1" />
                <GradientStop Offset="1.0" Color="#133E87" />
                <GradientStop Offset="0.7" Color="#a5bacc" />
            </LinearGradientBrush>
        </Border.BorderBrush>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="70" />
                <RowDefinition Height="1" />
                <RowDefinition Height="*" />
                <RowDefinition Height="1" />
                <RowDefinition Height="70" />
            </Grid.RowDefinitions>

            <TextBlock
                Grid.Row="0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="24"
                FontWeight="Bold"
                Foreground="#E6E5E5"
                Text="Add Semester" />

            <Border
                Grid.Row="1"
                Height="1"
                Margin="20,0"
                Background="#3A3D45" />
            <Border
                Grid.Row="3"
                Height="1"
                Margin="20,0"
                Background="#3A3D45" />


            <Border
                x:Name="AddSemesterControll"
                Grid.Row="0"
                Background="Transparent"
                MouseLeftButtonDown="AddSemesterControll_MouseLeftButtonDown" />

            <StackPanel Grid.Row="2" Margin="30">
                <!--  Semester Name Input  -->
                <StackPanel>
                    <Label
                        Content="Semestername*"
                        FontSize="14"
                        FontWeight="Bold"
                        Foreground="#E6E5E5" />
                    <xctk:WatermarkTextBox
                        x:Name="SemesterNameTextBox"
                        Margin="0,5"
                        Style="{StaticResource GradientTextBox}"
                        Text="{Binding SemesterName, UpdateSourceTrigger=PropertyChanged}"
                        Watermark="Enter name... (WiSe24/25)" />
                </StackPanel>

                <!--  DatePicker Sektion - Nebeneinander  -->
                <Grid Margin="0,10,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="15" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <!--  Start Datum  -->
                    <StackPanel Grid.Column="0">
                        <Label
                            Content="Start date*"
                            FontSize="14"
                            FontWeight="Bold"
                            Foreground="#E6E5E5" />
                        <DatePicker SelectedDate="{Binding StartDate, Mode=TwoWay}" Style="{StaticResource GradientDatePicker}" />
                    </StackPanel>

                    <!--  End Datum  -->
                    <StackPanel Grid.Column="2">
                        <Label
                            Content="End date*"
                            FontSize="14"
                            FontWeight="Bold"
                            Foreground="#E6E5E5" />
                        <DatePicker
                            Height="40"
                            SelectedDate="{Binding EndDate, Mode=TwoWay}"
                            Style="{StaticResource GradientDatePicker}" />
                    </StackPanel>
                </Grid>


                <!--  Color and Desc - Nebeneinander  -->
                <Grid Margin="0,10,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="15" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <Label
                            Content="Color"
                            FontSize="14"
                            FontWeight="Bold"
                            Foreground="#E6E5E5" />
                        <xctk:ColorPicker
                            Height="40"
                            SelectedColor="{Binding SemesterColor, Mode=TwoWay}"
                            Style="{StaticResource GradientColorPicker}" />
                    </StackPanel>

                    <!--  Semester Name Input  -->
                    <StackPanel Grid.Column="2">
                        <Label
                            Content="Description"
                            FontSize="14"
                            FontWeight="Bold"
                            Foreground="#E6E5E5" />
                        <xctk:WatermarkTextBox
                            x:Name="SemesterDescTextBox"
                            Style="{StaticResource GradientTextBox}"
                            Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}"
                            Watermark="Enter description..." />
                    </StackPanel>


                </Grid>


            </StackPanel>

            <DockPanel
                Grid.Row="4"
                Margin="0,0,30,0"
                LastChildFill="False">
                <Button
                    Width="80"
                    Height="40"
                    Margin="20,0,0,0"
                    Command="{Binding AddSemesterCommand}"
                    Content="Add"
                    DockPanel.Dock="Right"
                    Style="{StaticResource GreenGradientButton}" />

                <Button
                    Width="95"
                    Height="40"
                    Command="{Binding CancelAddSemesterCommand}"
                    Content="Cancel"
                    DockPanel.Dock="Right"
                    Style="{StaticResource GrayGradientButton}" />
            </DockPanel>


        </Grid>
    </Border>
</Window>
