<Window x:Class="AioStudy.UI.Views.Forms.AddModuleView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AioStudy.UI.Views.Forms"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        mc:Ignorable="d"
        Title="AddSemesterView" Height="700" Width="500"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        UseLayoutRounding="True"
        SnapsToDevicePixels="True">

    <Border CornerRadius="6"
            BorderThickness="1.5" Background="#212226">
        <Border.BorderBrush>
            <LinearGradientBrush>
                <GradientStop Color="#608BC1" Offset="0.0"/>
                <GradientStop Color="#133E87" Offset="1.0"/>
                <GradientStop Color="#a5bacc" Offset="0.7"/>
            </LinearGradientBrush>
        </Border.BorderBrush>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="70"/>
                <RowDefinition Height="1"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="1"/>
                <RowDefinition Height="70"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="1" 
                Background="#3A3D45" 
                Height="1" 
                Margin="20,0"/>
            <Border Grid.Row="3" 
                Background="#3A3D45" 
                Height="1" 
                Margin="20,0"/>


            <Border Grid.Row="0" x:Name="AddModuleControll" 
                MouseLeftButtonDown="AddModuleControll_MouseLeftButtonDown"
                Background="Transparent">

            </Border>

            <StackPanel Grid.Row="2" Margin="30">
                <!-- Module Name Input -->
                <StackPanel>
                    <Label Content="Modulename"
                       Foreground="#E6E5E5"
                       FontSize="14"
                       FontWeight="Bold"/>
                    <xctk:WatermarkTextBox x:Name="ModuleNameTextBox"
                                      Style="{StaticResource GradientTextBox}"
                                      Watermark="Modulename eingeben..."
                                      Margin="0,5"
                                      Text="{Binding ModuleName, UpdateSourceTrigger=PropertyChanged}"/>
                </StackPanel>

                <!-- DatePicker Sektion - Nebeneinander -->
                <Grid Margin="0,10,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="15"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Start Datum -->
                    <StackPanel Grid.Column="0">
                        <Label Content="Examdate" 
                           FontWeight="Bold" 
                           Foreground="#E6E5E5" 
                           FontSize="14"/>
                        <DatePicker Style="{StaticResource GradientDatePicker}"
                                SelectedDate="{Binding IbnBeginn, Mode=TwoWay}"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2">
                        <Label Content="Color" 
                               FontWeight="Bold" 
                               Foreground="#E6E5E5" 
                               FontSize="14"/>
                        <xctk:ColorPicker SelectedColor="{Binding SemesterColor, Mode=TwoWay}" 
                                        Style="{StaticResource GradientColorPicker}" Height="40"/>
                    </StackPanel>
                </Grid>


                <!-- Color and Desc - Nebeneinander -->
                <Grid Margin="0,10,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    

                    <!-- Semester Name Input -->
                    <StackPanel Grid.Column="2">
                        <Label Content="Description"
                                Foreground="#E6E5E5"
                                FontSize="14"
                                FontWeight="Bold"/>
                        <xctk:WatermarkTextBox x:Name="SemesterDescTextBox"
                                               Style="{StaticResource GradientTextBox}"
                                               Watermark="Semester Name eingeben..."
                                               Text="{Binding SemesterName, UpdateSourceTrigger=PropertyChanged}"
                                               Height="35"/>
                    </StackPanel>
                </Grid>
            </StackPanel>

            <DockPanel Grid.Row="4" LastChildFill="False"
                   Margin="0 0 30 0">
                <Button Content="Add"
                    Width="80"
                    Height="40"
                    Style="{StaticResource GreenGradientButton}"
                    DockPanel.Dock="Right"
                    Margin="20 0 0 0">
                </Button>

                <Button Content="Cancel"
                    Width="95"
                    Height="40"
                    Style="{StaticResource GrayGradientButton}"
                    Command="{Binding CancelAddModuleCommand}"
                    DockPanel.Dock="Right">
                </Button>
            </DockPanel>
        </Grid>
    </Border>
</Window>
