<Window
    x:Class="AioStudy.UI.Views.Forms.CreateUsername"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:AioStudy.UI.Views.Forms"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
    Title="CreateUsername"
    Width="600"
    Height="350"
    AllowsTransparency="True"
    Background="Transparent"
    SnapsToDevicePixels="True"
    Topmost="True"
    UseLayoutRounding="True"
    WindowStyle="None"
    mc:Ignorable="d">



    <Border
        Background="#212226"
        BorderThickness="1.5"
        CornerRadius="6">

        <Border.BorderBrush>
            <LinearGradientBrush>
                <GradientStop Offset="0.0" Color="#608BC1" />
                <GradientStop Offset="1.0" Color="#133E87" />
                <GradientStop Offset="0.7" Color="#a5bacc" />
            </LinearGradientBrush>
        </Border.BorderBrush>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="70" />
                <RowDefinition Height="1" />
                <RowDefinition Height="*" />
                <RowDefinition Height="1" />
                <RowDefinition Height="70" />
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="100" />
            </Grid.ColumnDefinitions>

            <TextBlock
                Grid.Row="0"
                Grid.ColumnSpan="3"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="20"
                FontWeight="Bold"
                Foreground="#E6E5E5"
                Text="Set Username" />


            <Border
                Grid.Row="1"
                Grid.ColumnSpan="3"
                Height="1"
                Margin="20,0"
                Background="#3A3D45" />
            <Border
                Grid.Row="3"
                Grid.ColumnSpan="3"
                Height="1"
                Margin="20,0"
                Background="#3A3D45" />

            <!--  Semester Name Input  -->
            <StackPanel
                Grid.Row="2"
                Grid.Column="1"
                VerticalAlignment="Center">
                <Label
                    Content="Username"
                    FontSize="14"
                    FontWeight="Bold"
                    Foreground="#E6E5E5" />
                <xctk:WatermarkTextBox
                    x:Name="UsernameTextBox"
                    Style="{StaticResource GradientTextBox}"
                    Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"
                    Watermark="Enter username..." />
            </StackPanel>

            <StackPanel
                Grid.Row="4"
                Grid.Column="1"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Orientation="Horizontal">
                <Button
                    Width="100"
                    Height="30"
                    Margin="0,0,15,0"
                    Command="{Binding CancelCreateUserCommand}"
                    Content="Cancel"
                    Style="{StaticResource GrayGradientButton}" />
                <Button
                    Width="100"
                    Height="30"
                    Command="{Binding CreateUserCommand}"
                    Content="Create"
                    Style="{StaticResource GreenGradientButton}" />
            </StackPanel>

        </Grid>
    </Border>
</Window>
