<UserControl
    x:Class="AioStudy.UI.Views.PomodoroView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:MaIc="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:AioStudy.UI.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="clr-namespace:AioStudy.UI.ViewModels"
    xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
    xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
    d:Background="#212226"
    d:DataContext="{d:DesignInstance Type=viewmodels:PomodoroViewModel}"
    d:DesignHeight="750"
    d:DesignWidth="1200"
    mc:Ignorable="d">

    <UserControl.Resources>
        <!--  Scrollbar Styles  -->
        <Style x:Key="LocalScrollBarThumb" TargetType="Thumb">
            <Setter Property="Background" Value="#4A4D55" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Thumb">
                        <Border
                            Background="#4A4D55"
                            CornerRadius="3"
                            Opacity="0.6" />
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.8" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="LocalScrollBar" TargetType="ScrollBar">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Width" Value="8" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ScrollBar">
                        <Grid Width="8" Background="Transparent">
                            <Track Name="PART_Track" IsDirectionReversed="true">
                                <Track.DecreaseRepeatButton>
                                    <RepeatButton
                                        Background="Transparent"
                                        Command="ScrollBar.PageUpCommand"
                                        Opacity="0" />
                                </Track.DecreaseRepeatButton>
                                <Track.Thumb>
                                    <Thumb Style="{StaticResource LocalScrollBarThumb}" />
                                </Track.Thumb>
                                <Track.IncreaseRepeatButton>
                                    <RepeatButton
                                        Background="Transparent"
                                        Command="ScrollBar.PageDownCommand"
                                        Opacity="0" />
                                </Track.IncreaseRepeatButton>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>


        <!--  ComboBox Style für Module Selector  -->
        <Style x:Key="ModuleComboBoxStyle" TargetType="ComboBox">
            <Setter Property="BorderThickness" Value="1.5" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontSize" Value="13" />
            <Setter Property="Height" Value="45" />
            <Setter Property="Padding" Value="12,0" />
            <Setter Property="Background" Value="#2A2D35" />
            <Setter Property="BorderBrush" Value="Gray" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <Border
                                x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="5">

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="30" />
                                    </Grid.ColumnDefinitions>

                                    <!--  Toggle Button (muss ZUERST sein, damit er im Hintergrund liegt)  -->
                                    <ToggleButton
                                        Grid.ColumnSpan="3"
                                        Panel.ZIndex="0"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Focusable="False"
                                        IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}">
                                        <ToggleButton.Template>
                                            <ControlTemplate TargetType="ToggleButton">
                                                <Border Background="Transparent" />
                                            </ControlTemplate>
                                        </ToggleButton.Template>
                                    </ToggleButton>

                                    <!--  Placeholder  -->
                                    <TextBlock
                                        x:Name="PlaceholderText"
                                        Grid.Column="0"
                                        Grid.ColumnSpan="3"
                                        Margin="12,0,0,0"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Panel.ZIndex="1"
                                        FontSize="12"
                                        Foreground="#B0B3BA"
                                        IsHitTestVisible="False"
                                        Text="Select Module (optional)"
                                        Visibility="Collapsed" />

                                    <!--  Selected Content  -->
                                    <Grid
                                        x:Name="SelectedContent"
                                        Grid.Column="0"
                                        Margin="12,0,0,0"
                                        VerticalAlignment="Center"
                                        Panel.ZIndex="1"
                                        IsHitTestVisible="False">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="8" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>

                                        <Border
                                            Grid.Column="0"
                                            Width="4"
                                            Height="24"
                                            Margin="0,0,0,0"
                                            Background="{Binding SelectedItem.Color, Converter={StaticResource StringToBrushConverter}, RelativeSource={RelativeSource TemplatedParent}}"
                                            CornerRadius="2" />

                                        <TextBlock
                                            Grid.Column="1"
                                            Margin="10,0,0,0"
                                            VerticalAlignment="Center"
                                            FontSize="13"
                                            FontWeight="Bold"
                                            Foreground="White"
                                            Text="{Binding SelectedItem.Name, RelativeSource={RelativeSource TemplatedParent}}"
                                            TextTrimming="CharacterEllipsis" />
                                    </Grid>

                                    <!--  Clear Button (ÜBER dem ToggleButton)  -->
                                    <Button
                                        x:Name="PART_ClearButton"
                                        Grid.Column="1"
                                        Width="20"
                                        Height="20"
                                        Margin="0,0,-8,0"
                                        VerticalAlignment="Center"
                                        Panel.ZIndex="2"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Command="{Binding DataContext.ClearSelectionCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                        Cursor="Hand"
                                        Focusable="False"
                                        Visibility="Visible">
                                        <Button.Template>
                                            <ControlTemplate TargetType="Button">
                                                <Grid Background="Transparent">
                                                    <Ellipse
                                                        x:Name="ellipse"
                                                        Width="18"
                                                        Height="18"
                                                        Fill="#3A3D45" />
                                                    <Path
                                                        Width="8"
                                                        Height="8"
                                                        HorizontalAlignment="Center"
                                                        VerticalAlignment="Center"
                                                        Data="M 0,0 L 8,8 M 8,0 L 0,8"
                                                        Stretch="Fill"
                                                        Stroke="White"
                                                        StrokeThickness="1.5" />
                                                </Grid>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="ellipse" Property="Fill" Value="#FF6B6B" />
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Button.Template>
                                    </Button>

                                    <!--  Dropdown Arrow  -->
                                    <MaIc:MaterialIcon
                                        x:Name="DropdownArrow"
                                        Grid.Column="2"
                                        Width="16"
                                        Height="16"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Panel.ZIndex="1"
                                        Foreground="#B0B3BA"
                                        IsHitTestVisible="False"
                                        Kind="ChevronDown" />
                                </Grid>
                            </Border>

                            <!--  Popup  -->
                            <Popup
                                x:Name="PART_Popup"
                                AllowsTransparency="True"
                                Focusable="False"
                                IsOpen="{TemplateBinding IsDropDownOpen}"
                                Placement="Bottom"
                                PopupAnimation="Slide">
                                <Border
                                    MinWidth="{TemplateBinding ActualWidth}"
                                    MaxHeight="200"
                                    Margin="0,5,0,0"
                                    Background="#2A2D35"
                                    BorderBrush="#608BC1"
                                    BorderThickness="1"
                                    CornerRadius="5">
                                    <Border.Effect>
                                        <DropShadowEffect
                                            BlurRadius="15"
                                            Direction="270"
                                            Opacity="0.4"
                                            ShadowDepth="5"
                                            Color="#000000" />
                                    </Border.Effect>
                                    <ScrollViewer
                                        MaxHeight="200"
                                        HorizontalScrollBarVisibility="Disabled"
                                        VerticalScrollBarVisibility="Auto">
                                        <ScrollViewer.Resources>
                                            <Style BasedOn="{StaticResource LocalScrollBar}" TargetType="ScrollBar" />
                                        </ScrollViewer.Resources>
                                        <ItemsPresenter />
                                    </ScrollViewer>
                                </Border>
                            </Popup>
                        </Grid>

                        <ControlTemplate.Triggers>
                            <Trigger Property="SelectedItem" Value="{x:Null}">
                                <Setter TargetName="PlaceholderText" Property="Visibility" Value="Visible" />
                                <Setter TargetName="SelectedContent" Property="Visibility" Value="Collapsed" />
                                <Setter TargetName="PART_ClearButton" Property="Visibility" Value="Collapsed" />
                            </Trigger>

                            <!--  Hover Effect  -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#353842" />
                            </Trigger>

                            <!--  Dropdown Open  -->
                            <Trigger Property="IsDropDownOpen" Value="True">
                                <Setter TargetName="DropdownArrow" Property="Kind" Value="ChevronUp" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!--  ComboBoxItem Style  -->
        <Style x:Key="ModuleComboBoxItemStyle" TargetType="ComboBoxItem">
            <Setter Property="Height" Value="40" />
            <Setter Property="Padding" Value="7" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBoxItem">
                        <Border
                            x:Name="border"
                            Width="210"
                            Padding="{TemplateBinding Padding}"
                            Background="{TemplateBinding Background}">
                            <Grid Width="226">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="12" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <Border
                                    Grid.Column="0"
                                    Width="4"
                                    Height="24"
                                    Margin="0,0,0,0"
                                    HorizontalAlignment="Left"
                                    Background="{Binding Color, Converter={StaticResource StringToBrushConverter}}"
                                    CornerRadius="2" />

                                <TextBlock
                                    Grid.Column="1"
                                    VerticalAlignment="Center"
                                    FontSize="13"
                                    Foreground="White"
                                    Text="{Binding Name}"
                                    TextTrimming="CharacterEllipsis" />
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsHighlighted" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#3A3D45" />
                                <Setter TargetName="border" Property="CornerRadius" Value="10" />
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#4A4D55" />
                                <Setter TargetName="border" Property="CornerRadius" Value="10" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80" />
            <RowDefinition Height="1" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  Header  -->
        <Grid Grid.Row="0" Margin="30,0,30,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!--  Titel Sektion  -->
            <StackPanel Grid.Column="0" VerticalAlignment="Center">
                <TextBlock
                    Margin="0,0,0,4"
                    FontSize="32"
                    FontWeight="Bold"
                    Foreground="White"
                    Text="Pomodoro" />
                <TextBlock
                    FontSize="14"
                    Foreground="#B0B3BA"
                    Text="Keep track of your time with the Pomodoro technique" />
            </StackPanel>
        </Grid>

        <!--  Separator  -->
        <Border
            Grid.Row="1"
            Height="1"
            Margin="30,0"
            Background="#3A3D45" />

        <Border Grid.Row="2">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="100" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!--  Quicktimer  -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                </Grid>

                <!--  Timer Display Border  -->
                <Border
                    Grid.Row="1"
                    Width="400"
                    Height="240"
                    Margin="0,30,0,0"
                    Panel.ZIndex="9999999"
                    Background="#1F2024"
                    BorderThickness="1"
                    CornerRadius="10">

                    <Border.Effect>
                        <DropShadowEffect
                            BlurRadius="20"
                            Direction="270"
                            Opacity="0.3"
                            ShadowDepth="10"
                            Color="#000000" />
                    </Border.Effect>

                    <Border.BorderBrush>
                        <LinearGradientBrush>
                            <GradientStop Offset="0.0" Color="{Binding Color, TargetNullValue=#608BC1, FallbackValue=#608BC1}" />
                            <GradientStop Offset="1.0" Color="#133E87" />
                            <GradientStop Offset="0.5" Color="#a5bacc" />
                        </LinearGradientBrush>
                    </Border.BorderBrush>

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="2*" />
                            <RowDefinition Height="1" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="50" />
                        </Grid.ColumnDefinitions>

                        <Button
                            Grid.Column="1"
                            Width="30"
                            Height="30"
                            Margin="15,0,0,0"
                            VerticalAlignment="Top"
                            Cursor="Hand"
                            Style="{StaticResource NoHoverButtonStyle}"
                            ToolTip="Open Popout timer">
                            <MaIc:MaterialIcon
                                Width="20"
                                Height="20"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Foreground="#3A3D45"
                                Kind="OpenInNew" />
                        </Button>

                        <!--  Separator  -->
                        <Border
                            Grid.Row="1"
                            Grid.ColumnSpan="2"
                            Height="1"
                            Margin="30,0"
                            Background="#3A3D45" />

                        <StackPanel
                            Grid.ColumnSpan="2"
                            Background="Transparent"
                            Orientation="Vertical">
                            <StackPanel
                                Margin="0,0,0,-10"
                                HorizontalAlignment="Center"
                                Orientation="Horizontal">

                                <xctk:IntegerUpDown
                                    Width="auto"
                                    Height="80"
                                    HorizontalContentAlignment="Right"
                                    Panel.ZIndex="1"
                                    AllowTextInput="False"
                                    Cursor="ScrollNS"
                                    FontFamily="Arial Rounded MT Bold"
                                    FontSize="60"
                                    FormatString="00"
                                    IsEnabled="{Binding CanChangeTime}"
                                    Maximum="300"
                                    Minimum="0"
                                    Style="{StaticResource GradientIntegerUpDownTransparent}"
                                    ToolTip="Scroll or type to set minutes (0-300)"
                                    Value="{Binding Minutes, Mode=TwoWay, FallbackValue=12, UpdateSourceTrigger=PropertyChanged}" />

                                <TextBlock
                                    Margin="0,-10,-10,0"
                                    FontSize="65"
                                    FontWeight="Bold"
                                    Foreground="White"
                                    Text=":" />

                                <xctk:IntegerUpDown
                                    Width="85"
                                    Height="80"
                                    Margin="3,0,0,0"
                                    HorizontalContentAlignment="Left"
                                    Panel.ZIndex="1"
                                    AllowTextInput="False"
                                    Cursor="ScrollNS"
                                    FontFamily="Arial Rounded MT Bold"
                                    FontSize="60"
                                    FormatString="00"
                                    IsEnabled="{Binding CanChangeTime}"
                                    Maximum="59"
                                    Minimum="0"
                                    Style="{StaticResource GradientIntegerUpDownTransparent}"
                                    TextAlignment="Left"
                                    ToolTip="Scroll or type to set seconds (0-59)"
                                    Value="{Binding Seconds, Mode=TwoWay, FallbackValue=12, UpdateSourceTrigger=PropertyChanged}" />
                            </StackPanel>
                            <TextBlock
                                Margin="8,0,0,0"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                FontSize="14"
                                FontWeight="Bold"
                                Foreground="#696969"
                                Text="{Binding TimerFinishedTime, FallbackValue=10:22, StringFormat={}{0:hh\\:mm}, UpdateSourceTrigger=PropertyChanged}" />

                            <!--  Module Selector ComboBox  -->
                            <ComboBox
                                x:Name="ModuleComboBox"
                                Width="250"
                                Height="40"
                                Margin="0,10,0,0"
                                IsEnabled="{Binding CanChangeModule}"
                                ItemContainerStyle="{StaticResource ModuleComboBoxItemStyle}"
                                ItemsSource="{Binding Modules}"
                                SelectedItem="{Binding SelectedModule, Mode=TwoWay}"
                                Style="{StaticResource ModuleComboBoxStyle}" />
                        </StackPanel>

                        <!--  Control Buttons  -->
                        <DockPanel
                            Grid.Row="2"
                            Grid.ColumnSpan="2"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            LastChildFill="False">

                            <Button
                                Width="60"
                                Command="{Binding ControlTimerCommand}"
                                Style="{StaticResource GradientButton}">
                                <MaIc:MaterialIcon
                                    Width="20"
                                    Height="20"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Foreground="White">
                                    <MaIc:MaterialIcon.Kind>
                                        <MultiBinding Converter="{StaticResource BoolToIconConverter}">
                                            <Binding Path="IsRunning" />
                                            <Binding Path="IsPaused" />
                                        </MultiBinding>
                                    </MaIc:MaterialIcon.Kind>
                                </MaIc:MaterialIcon>
                            </Button>
                            <Button
                                Width="60"
                                Margin="10,0,0,0"
                                Command="{Binding ResetTimerCommand}"
                                Style="{StaticResource GradientButton}">
                                <MaIc:MaterialIcon
                                    Width="20"
                                    Height="20"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Foreground="White"
                                    Kind="Refresh" />
                            </Button>
                        </DockPanel>
                    </Grid>
                </Border>
            </Grid>
        </Border>
    </Grid>
</UserControl>