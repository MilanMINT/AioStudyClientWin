<UserControl
    x:Class="AioStudy.UI.Views.PomodoroView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:MaIc="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:AioStudy.UI.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="clr-namespace:AioStudy.UI.ViewModels"
    xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
    xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
    d:Background="#212226"
    d:DataContext="{d:DesignInstance Type=viewmodels:PomodoroViewModel}"
    d:DesignHeight="750"
    d:DesignWidth="1200"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80" />
            <RowDefinition Height="1" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  Header  -->
        <Grid Grid.Row="0" Margin="30,0,30,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!--  Titel Sektion  -->
            <StackPanel Grid.Column="0" VerticalAlignment="Center">
                <TextBlock
                    Margin="0,0,0,4"
                    FontSize="32"
                    FontWeight="Bold"
                    Foreground="White"
                    Text="Pomodoro" />
                <TextBlock
                    FontSize="14"
                    Foreground="#B0B3BA"
                    Text="Keep track of your time with the Pomodoro technique" />
            </StackPanel>
        </Grid>

        <!--  Separator  -->
        <Border
            Grid.Row="1"
            Height="1"
            Margin="30,0"
            Background="#3A3D45" />

        <Border Grid.Row="2">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <ComboBox
                    Grid.Row="1"
                    Width="300"
                    Height="40"
                    ItemsSource="{Binding Modules}"
                    SelectedItem="{Binding SelectedModule}">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Name}" />
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>

                <!--  Timer Display Border  -->
                <Border
                    Grid.Row="0"
                    Width="400"
                    Height="240"
                    Margin="0,30,0,0"
                    Panel.ZIndex="9999999"
                    Background="#1F2024"
                    BorderThickness="1"
                    CornerRadius="10">

                    <Border.Effect>
                        <DropShadowEffect
                            BlurRadius="20"
                            Direction="270"
                            Opacity="0.3"
                            ShadowDepth="10"
                            Color="#000000" />
                    </Border.Effect>

                    <Border.BorderBrush>
                        <LinearGradientBrush>
                            <GradientStop Offset="0.0" Color="{Binding Color, TargetNullValue=#608BC1, FallbackValue=#608BC1}" />
                            <GradientStop Offset="1.0" Color="#133E87" />
                            <GradientStop Offset="0.5" Color="#a5bacc" />
                        </LinearGradientBrush>
                    </Border.BorderBrush>

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="1" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="50" />
                        </Grid.ColumnDefinitions>

                        <Button
                            Grid.Column="1"
                            Width="30"
                            Height="30"
                            Margin="15,0,0,0"
                            VerticalAlignment="Top"
                            Cursor="Hand"
                            Style="{StaticResource NoHoverButtonStyle}"
                            ToolTip="Open Popout timer">
                            <MaIc:MaterialIcon
                                Width="20"
                                Height="20"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Foreground="#3A3D45"
                                Kind="OpenInNew" />
                        </Button>

                        <!--  Separator  -->
                        <Border
                            Grid.Row="1"
                            Grid.ColumnSpan="2"
                            Height="1"
                            Margin="30,0"
                            Background="#3A3D45" />

                        <!--<wv2:WebView2
                            x:Name="DotwaveView"
                            Grid.Row="3"
                            Panel.ZIndex="-1"
                            AllowDrop="False"
                            Focusable="False"
                            IsEnabled="False" />-->

                        <StackPanel
                            Grid.ColumnSpan="2"
                            Background="Transparent"
                            Orientation="Vertical">
                            <StackPanel
                                Margin="0,0,0,-10"
                                HorizontalAlignment="Center"
                                Orientation="Horizontal">

                                <xctk:IntegerUpDown
                                    Width="auto"
                                    Height="80"
                                    HorizontalContentAlignment="Right"
                                    Panel.ZIndex="1"
                                    FontFamily="Arial Rounded MT Bold"
                                    FontSize="60"
                                    FormatString="00"
                                    IsEnabled="{Binding CanChangeTime}"
                                    Maximum="300"
                                    Minimum="0"
                                    Style="{StaticResource GradientIntegerUpDownTransparent}"
                                    ToolTip="Scroll or type to set minutes (0-300)"
                                    Value="{Binding Minutes, Mode=TwoWay, FallbackValue=12, UpdateSourceTrigger=PropertyChanged}" />

                                <TextBlock
                                    Margin="0,-10,-10,0"
                                    FontSize="65"
                                    FontWeight="Bold"
                                    Foreground="White"
                                    Text=":" />

                                <xctk:IntegerUpDown
                                    Width="85"
                                    Height="80"
                                    Margin="3,0,0,0"
                                    HorizontalContentAlignment="Left"
                                    Panel.ZIndex="1"
                                    FontFamily="Arial Rounded MT Bold"
                                    FontSize="60"
                                    FormatString="00"
                                    IsEnabled="{Binding CanChangeTime}"
                                    Maximum="59"
                                    Minimum="0"
                                    Style="{StaticResource GradientIntegerUpDownTransparent}"
                                    TextAlignment="Left"
                                    ToolTip="Scroll or type to set seconds (0-59)"
                                    Value="{Binding Seconds, Mode=TwoWay, FallbackValue=12, UpdateSourceTrigger=PropertyChanged}" />
                            </StackPanel>
                            <TextBlock
                                Margin="8,0,0,0"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                FontSize="14"
                                FontWeight="Bold"
                                Foreground="#696969"
                                Text="{Binding TimerFinishedTime, FallbackValue=10:22, StringFormat={}{0:hh\\:mm}, UpdateSourceTrigger=PropertyChanged}" />



                        </StackPanel>

                        <!--  Ersetze den DockPanel-Bereich mit diesem Code  -->
                        <DockPanel
                            Grid.Row="2"
                            Grid.ColumnSpan="2"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            LastChildFill="False">

                            <!--  Kombinierter Play/Pause Button  -->
                            <Button
                                Width="60"
                                Command="{Binding ControlTimerCommand}"
                                Style="{StaticResource GradientButton}">
                                <MaIc:MaterialIcon
                                    Width="20"
                                    Height="20"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Foreground="White">
                                    <MaIc:MaterialIcon.Kind>
                                        <MultiBinding Converter="{StaticResource BoolToIconConverter}">
                                            <Binding Path="IsRunning" />
                                            <Binding Path="IsPaused" />
                                        </MultiBinding>
                                    </MaIc:MaterialIcon.Kind>
                                </MaIc:MaterialIcon>
                            </Button>
                            <Button
                                Width="60"
                                Margin="10,0,0,0"
                                Command="{Binding ResetTimerCommand}"
                                Style="{StaticResource GradientButton}">
                                <MaIc:MaterialIcon
                                    Width="20"
                                    Height="20"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Foreground="White"
                                    Kind="Refresh" />
                            </Button>
                        </DockPanel>
                    </Grid>
                </Border>
            </Grid>
        </Border>
    </Grid>
</UserControl>
