<UserControl
    x:Class="AioStudy.UI.Views.PomodoroView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:AioStudy.UI.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <StackPanel
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Orientation="Horizontal">

            <xctk:IntegerUpDown
                Margin="0,0,10,0"
                Maximum="23"
                Minimum="0"
                Style="{StaticResource GradientIntegerUpDown}"
                Value="{Binding Hours, Mode=TwoWay}" />

            <TextBlock
                VerticalAlignment="Center"
                FontSize="24"
                Foreground="White"
                Text=":" />

            <xctk:IntegerUpDown
                Margin="10,0,0,0"
                Maximum="59"
                Minimum="0"
                Style="{StaticResource GradientIntegerUpDown}"
                Value="{Binding Minutes, Mode=TwoWay}" />

            <TextBlock
                Margin="10,0,0,0"
                VerticalAlignment="Center"
                FontSize="16"
                Foreground="Gray"
                Text="hh:mm" />
        </StackPanel>
    </Grid>
</UserControl>
