<UserControl
    x:Class="AioStudy.UI.Views.Overviews.ModuleStatisticsOverviewView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:MaIc="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:AioStudy.UI.Views.Overviews"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:overview="clr-namespace:AioStudy.UI.ViewModels.Overview"
    d:DataContext="{d:DesignInstance Type=overview:ModuleStatisticsOverviewViewmodel}"
    d:DesignHeight="750"
    d:DesignWidth="1200"
    Background="#212226"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="1" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="30,0,30,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0">
                <DockPanel LastChildFill="False">
                    <Button
                        x:Name="BackButton"
                        Margin="0,0,0,15"
                        Padding="8,6"
                        HorizontalAlignment="Left"
                        Command="{Binding BackCommand}"
                        Style="{StaticResource GrayGradientButton}"
                        ToolTip="Back to Modules">
                        <StackPanel Orientation="Horizontal">
                            <MaIc:MaterialIcon
                                Width="16"
                                Height="16"
                                Margin="0,0,6,0"
                                Kind="ArrowLeft" />
                            <TextBlock FontSize="12" Text="Back to Overview" />
                        </StackPanel>
                    </Button>

                    <Button
                        Width="45"
                        Margin="0,0,0,0"
                        Command="{Binding RefreshCommand}"
                        DockPanel.Dock="Right"
                        Style="{StaticResource GradientButton}"
                        ToolTip="Refresh">
                        <MaIc:MaterialIcon
                            Width="22"
                            Height="22"
                            Kind="Refresh" />
                    </Button>
                </DockPanel>

                <TextBlock
                    Margin="0,0,0,8"
                    FontSize="36"
                    FontWeight="Bold"
                    Foreground="White">
                    <Run Text="{Binding ModuleName}" />
                    <Run Text=" Statistics" />
                </TextBlock>

                <StackPanel Margin="0,0,0,10" Orientation="Horizontal">
                    <MaIc:MaterialIcon
                        Width="16"
                        Height="16"
                        Margin="0,0,6,0"
                        VerticalAlignment="Center"
                        Foreground="#A0AEC0"
                        Kind="ChartLine" />
                    <TextBlock
                        VerticalAlignment="Center"
                        FontSize="14"
                        Foreground="#B0B3BA"
                        Text="See the statistics for this module" />
                </StackPanel>
            </StackPanel>

            <StackPanel
                Grid.Column="1"
                VerticalAlignment="Center"
                Orientation="Horizontal" />
        </Grid>

        <Border
            Grid.Row="1"
            Height="1"
            Margin="30,0,30,0"
            Background="#3A3D45" />

        <Grid Grid.Row="2" Margin="30">
            <!--  Content goes here  -->
        </Grid>
    </Grid>
</UserControl>