<UserControl
    x:Class="AioStudy.UI.Views.Overviews.ModuleOverViewView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:MaIc="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:AioStudy.UI.Views.Overviews"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:overview="clr-namespace:AioStudy.UI.ViewModels.Overview"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    xmlns:util="clr-namespace:AioStudy.Core.Util;assembly=AioStudy.Core"
    xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
    d:DataContext="{d:DesignInstance Type=overview:ModuleOverViewViewModel}"
    d:DesignHeight="1800"
    d:DesignWidth="1200"
    Background="#212226"
    mc:Ignorable="d">

    <UserControl.Resources>
        <!--  Card Style  -->
        <Style x:Key="InfoCard" TargetType="Border">
            <Setter Property="Background" Value="#1F2024" />
            <Setter Property="CornerRadius" Value="12" />
            <Setter Property="Padding" Value="20" />
            <Setter Property="Margin" Value="10" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="BorderBrush" Value="#3A3D45" />
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect
                        BlurRadius="8"
                        Opacity="0.3"
                        ShadowDepth="3"
                        Color="#000000" />
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="#34373E" />
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect
                                BlurRadius="18"
                                Opacity="0.32"
                                ShadowDepth="6"
                                Color="#000000" />
                        </Setter.Value>
                    </Setter>
                    <Setter Property="RenderTransform">
                        <Setter.Value>
                            <TranslateTransform Y="-2" />
                        </Setter.Value>
                    </Setter>
                    <Setter Property="RenderTransformOrigin" Value="0.5,0.5" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <!--  Scrollbar Styles  -->
        <Style x:Key="LocalScrollBarThumb" TargetType="Thumb">
            <Setter Property="Background" Value="#4A4D55" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Thumb">
                        <Border
                            Background="#4A4D55"
                            CornerRadius="3"
                            Opacity="0.6" />
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.8" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="LocalScrollBar" TargetType="ScrollBar">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Width" Value="8" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ScrollBar">
                        <Grid Width="8" Background="Transparent">
                            <Track Name="PART_Track" IsDirectionReversed="true">
                                <Track.DecreaseRepeatButton>
                                    <RepeatButton
                                        Background="Transparent"
                                        Command="ScrollBar.PageUpCommand"
                                        Opacity="0" />
                                </Track.DecreaseRepeatButton>
                                <Track.Thumb>
                                    <Thumb Style="{StaticResource LocalScrollBarThumb}" />
                                </Track.Thumb>
                                <Track.IncreaseRepeatButton>
                                    <RepeatButton
                                        Background="Transparent"
                                        Command="ScrollBar.PageDownCommand"
                                        Opacity="0" />
                                </Track.IncreaseRepeatButton>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!--  Metric Card Style  -->
        <Style x:Key="MetricCard" TargetType="Border">
            <Setter Property="Background" Value="#1F2024" />
            <Setter Property="CornerRadius" Value="8" />
            <Setter Property="Padding" Value="15" />
            <Setter Property="Margin" Value="5" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="BorderBrush" Value="#3A3D45" />
            <Setter Property="Effect">
                <Setter.Value>
                    <!--  default shadow  -->
                    <DropShadowEffect
                        BlurRadius="8"
                        Opacity="0.36"
                        ShadowDepth="3"
                        Color="#000000" />
                </Setter.Value>
            </Setter>

            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="#41444C" />
                    <Setter Property="Effect">
                        <Setter.Value>
                            <!--    -->
                            <DropShadowEffect
                                BlurRadius="18"
                                Opacity="0.32"
                                ShadowDepth="6"
                                Color="#000000" />
                        </Setter.Value>
                    </Setter>
                    <!--  slight elevation  -->
                    <Setter Property="RenderTransform">
                        <Setter.Value>
                            <TranslateTransform Y="-2" />
                        </Setter.Value>
                    </Setter>
                    <Setter Property="RenderTransformOrigin" Value="0.5,0.5" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <!--  Header Text Style  -->
        <Style x:Key="HeaderText" TargetType="TextBlock">
            <Setter Property="FontSize" Value="22" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Foreground" Value="#E0E0E0" />
            <Setter Property="Margin" Value="0,0,0,15" />
        </Style>

        <!--  Label Style  -->
        <Style x:Key="LabelText" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Foreground" Value="#A0AEC0" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Margin" Value="0,0,0,4" />
        </Style>

        <!--  Value Style  -->
        <Style x:Key="ValueText" TargetType="TextBlock">
            <Setter Property="FontSize" Value="17" />
            <Setter Property="Foreground" Value="#E0E0E0" />
            <Setter Property="FontWeight" Value="Medium" />
        </Style>

        <!--  Status Badge Styles  -->
        <Style x:Key="StatusBadgeBase" TargetType="Border">
            <Setter Property="CornerRadius" Value="12" />
            <Setter Property="Padding" Value="8,4" />
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>

        <!--  expose enum values for ComboBox  -->
        <ObjectDataProvider
            x:Key="ModuleStatusValues"
            MethodName="GetValues"
            ObjectType="{x:Type sys:Enum}">
            <ObjectDataProvider.MethodParameters>
                <!--  nested enum inside Enums class  -->
                <x:Type TypeName="util:Enums+ModuleStatus" />
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
    </UserControl.Resources>

    <!--  header  -->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="30,0,30,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Row="0" Grid.Column="0">
                <Button
                    Margin="0,0,0,15"
                    Padding="8,6"
                    HorizontalAlignment="Left"
                    Command="{Binding BackCommand}"
                    Style="{StaticResource GrayGradientButton}"
                    ToolTip="Back to Modules">
                    <StackPanel Orientation="Horizontal">
                        <MaIc:MaterialIcon
                            Width="16"
                            Height="16"
                            Margin="0,0,6,0"
                            Kind="ArrowLeft" />
                        <TextBlock FontSize="12" Text="{Binding BackToString}" />
                    </StackPanel>
                </Button>

                <!--  Module name: display OR edit  -->
                <StackPanel>
                    <TextBlock
                        Margin="0,0,0,8"
                        FontSize="36"
                        FontWeight="Bold"
                        Foreground="White"
                        Text="{Binding ModuleName, FallbackValue='Messtechnik'}"
                        Visibility="{Binding IsEditMode, Converter={StaticResource InverseBoolToVisibilityConverter}}" />

                    <xctk:WatermarkTextBox
                        Height="44"
                        Margin="0,0,0,8"
                        Padding="5,0,5,0"
                        HorizontalAlignment="Left"
                        Background="#1F2024"
                        FontSize="28"
                        FontWeight="Bold"
                        Foreground="White"
                        Style="{StaticResource GradientTextBox}"
                        Text="{Binding NewModuleName, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                        Visibility="{Binding IsEditMode, Converter={StaticResource BoolToVisibilityConverter}}" />
                </StackPanel>

                <StackPanel Margin="0,0,0,10" Orientation="Horizontal">
                    <MaIc:MaterialIcon
                        Width="16"
                        Height="16"
                        Margin="0,0,6,0"
                        VerticalAlignment="Center"
                        Foreground="#A0AEC0"
                        Kind="BookOpenPageVariant" />
                    <TextBlock
                        VerticalAlignment="Center"
                        FontSize="14"
                        Foreground="#A0AEC0"
                        Text="Module Overview" />
                </StackPanel>
            </StackPanel>

            <!--  Action Buttons  -->
            <StackPanel
                Grid.Row="0"
                Grid.Column="1"
                VerticalAlignment="Top"
                Orientation="Horizontal">

                <!--  Edit  -->
                <Button
                    Margin="0,0,10,0"
                    Padding="10,8"
                    Command="{Binding ToggleEditCancelCommand}"
                    Style="{StaticResource GrayGradientButton}"
                    ToolTip="Edit Module"
                    Visibility="{Binding IsEditMode, Converter={StaticResource InverseBoolToVisibilityConverter}}">
                    <StackPanel Orientation="Horizontal">
                        <MaIc:MaterialIcon
                            Width="16"
                            Height="16"
                            Margin="0,0,6,0"
                            Kind="EditOutline" />
                        <TextBlock FontSize="12" Text="Edit" />
                    </StackPanel>
                </Button>

                <!--  Cancel  -->
                <Button
                    Margin="0,0,10,0"
                    Padding="10,8"
                    Command="{Binding ToggleEditCancelCommand}"
                    Style="{StaticResource GrayGradientButton}"
                    ToolTip="Cancel editing"
                    Visibility="{Binding IsEditMode, Converter={StaticResource BoolToVisibilityConverter}}">
                    <StackPanel Orientation="Horizontal">
                        <MaIc:MaterialIcon
                            Width="16"
                            Height="16"
                            Margin="0,0,6,0"
                            Kind="Close" />
                        <TextBlock FontSize="12" Text="Cancel" />
                    </StackPanel>
                </Button>

                <!--  Save  -->
                <Button
                    Margin="0,0,10,0"
                    Padding="10,8"
                    Command="{Binding SaveModuleCommand}"
                    Style="{StaticResource GradientButton}"
                    ToolTip="Save changes"
                    Visibility="{Binding IsEditMode, Converter={StaticResource BoolToVisibilityConverter}}">
                    <StackPanel Orientation="Horizontal">
                        <MaIc:MaterialIcon
                            Width="16"
                            Height="16"
                            Margin="0,0,6,0"
                            Kind="ContentSave" />
                        <TextBlock FontSize="12" Text="Save" />
                    </StackPanel>
                </Button>

                <Button
                    Padding="10,8"
                    Command="{Binding DeleteModuleCommand}"
                    CommandParameter="{Binding Module}"
                    Style="{StaticResource RedGradientButtonThinBorder}"
                    ToolTip="Delete Module">
                    <StackPanel Orientation="Horizontal">
                        <MaIc:MaterialIcon
                            Width="16"
                            Height="16"
                            Margin="0,0,6,0"
                            Kind="DeleteOutline" />
                        <TextBlock FontSize="12" Text="Delete" />
                    </StackPanel>
                </Button>
            </StackPanel>

            <!--    -->
            <Border
                Grid.Row="1"
                Grid.ColumnSpan="2"
                Height="1"
                Margin="0,0,0,0"
                Background="#3A3D45" />
        </Grid>

        <!--  SCROLLABLE CONTENT  -->
        <ScrollViewer
            Grid.Row="1"
            HorizontalScrollBarVisibility="Disabled"
            VerticalScrollBarVisibility="Auto">
            <ScrollViewer.Resources>
                <Style BasedOn="{StaticResource LocalScrollBar}" TargetType="ScrollBar" />
            </ScrollViewer.Resources>

            <Grid Margin="30">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!--  QUICK METRICS  -->
                <Grid Grid.Row="0" Margin="0,0,0,30">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <!--  Credits (display / edit)  -->
                    <Border Grid.Column="0" Style="{StaticResource MetricCard}">
                        <StackPanel>
                            <StackPanel Margin="0,0,0,8" Orientation="Horizontal">
                                <MaIc:MaterialIcon
                                    Width="20"
                                    Height="20"
                                    Margin="0,0,8,0"
                                    Foreground="#F6E05E"
                                    Kind="Star" />
                                <TextBlock Style="{StaticResource LabelText}" Text="Credits" />
                            </StackPanel>

                            <!--  display  -->
                            <TextBlock
                                FontSize="24"
                                FontWeight="Bold"
                                Foreground="#F6E05E"
                                Text="{Binding Module.ModuleCredits, FallbackValue=6}"
                                Visibility="{Binding IsEditMode, Converter={StaticResource InverseBoolToVisibilityConverter}}" />

                            <!--  edit  -->
                            <xctk:WatermarkTextBox
                                Width="80"
                                HorizontalAlignment="Left"
                                Background="#2A2D35"
                                FontSize="18"
                                FontWeight="Bold"
                                Style="{StaticResource GradientTextBox}"
                                Text="{Binding NewCreditValue, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                Visibility="{Binding IsEditMode, Converter={StaticResource BoolToVisibilityConverter}}" />

                            <TextBlock
                                FontSize="12"
                                Foreground="#A0AEC0"
                                Text="ECTS Points" />
                        </StackPanel>
                    </Border>

                    <!--  Status  -->
                    <Border Grid.Column="1" Style="{StaticResource MetricCard}">
                        <StackPanel>
                            <StackPanel Margin="0,0,0,8" Orientation="Horizontal">
                                <MaIc:MaterialIcon
                                    Width="20"
                                    Height="20"
                                    Margin="0,0,8,0"
                                    Foreground="{Binding Module.Grade, Converter={StaticResource GradeToBackgroundConverter}}"
                                    Kind="CheckCircle" />
                                <TextBlock Style="{StaticResource LabelText}" Text="Status" />
                            </StackPanel>

                            <TextBlock
                                FontSize="24"
                                FontWeight="Bold"
                                Foreground="{Binding Module.Grade, Converter={StaticResource GradeToBackgroundConverter}}"
                                Text="{Binding Module.ExamStatus, FallbackValue='In Progress'}"
                                Visibility="{Binding IsEditMode, Converter={StaticResource InverseBoolToVisibilityConverter}}" />

                            <ComboBox
                                Width="180"
                                Height="34"
                                HorizontalAlignment="Left"
                                ItemsSource="{Binding Source={StaticResource ModuleStatusValues}}"
                                SelectedItem="{Binding NewModuleStatus, Mode=TwoWay}"
                                Style="{StaticResource GradientComboBox}"
                                Visibility="{Binding IsEditMode, Converter={StaticResource BoolToVisibilityConverter}}" />

                            <TextBlock
                                FontSize="12"
                                Foreground="#A0AEC0"
                                Text="Current Status" />
                        </StackPanel>
                    </Border>

                    <!--  Grade displayedit)  -->
                    <Border Grid.Column="2" Style="{StaticResource MetricCard}">
                        <StackPanel>
                            <StackPanel Margin="0,0,0,8" Orientation="Horizontal">
                                <MaIc:MaterialIcon
                                    Width="20"
                                    Height="20"
                                    Margin="0,0,8,0"
                                    Foreground="#9F7AEA"
                                    Kind="Trophy" />
                                <TextBlock Style="{StaticResource LabelText}" Text="Grade" />
                            </StackPanel>

                            <TextBlock
                                FontSize="24"
                                FontWeight="Bold"
                                Foreground="#9F7AEA"
                                Visibility="{Binding IsEditMode, Converter={StaticResource InverseBoolToVisibilityConverter}}">
                                <TextBlock.Text>
                                    <Binding
                                        FallbackValue="2.3"
                                        Path="Module.Grade"
                                        StringFormat="F1"
                                        TargetNullValue="N/A" />
                                </TextBlock.Text>
                            </TextBlock>

                            <ComboBox
                                Width="120"
                                Height="34"
                                HorizontalAlignment="Left"
                                ItemsSource="{Binding GradesStringListToChoose}"
                                SelectedItem="{Binding SelectedGradesStringListToChoose, Mode=TwoWay}"
                                Style="{StaticResource GradientComboBox}"
                                Visibility="{Binding ShowGradeEdit, Converter={StaticResource BoolToVisibilityConverter}}" />

                            <TextBlock
                                FontSize="12"
                                Foreground="#A0AEC0"
                                Text="Final Grade" />
                        </StackPanel>
                    </Border>

                    <!--  Study Time card  -->
                    <Border Grid.Column="3" Style="{StaticResource MetricCard}">
                        <StackPanel>
                            <StackPanel Margin="0,0,0,8" Orientation="Horizontal">
                                <MaIc:MaterialIcon
                                    Width="20"
                                    Height="20"
                                    Margin="0,0,8,0"
                                    Foreground="#4FD1C7"
                                    Kind="Clock" />
                                <TextBlock Style="{StaticResource LabelText}" Text="Study Time" />
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock
                                    FontSize="20"
                                    FontWeight="Bold"
                                    Foreground="#4FD1C7"
                                    Text="{Binding LearnedMinutes}" />
                            </StackPanel>
                            <TextBlock
                                FontSize="12"
                                Foreground="#A0AEC0"
                                Text="Total Time" />
                        </StackPanel>
                    </Border>
                </Grid>

                <!--  MAIN CONTENT  -->
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <!--  Left Column  -->
                    <StackPanel Grid.Column="0">
                        <Border Style="{StaticResource InfoCard}">
                            <StackPanel>
                                <TextBlock Style="{StaticResource HeaderText}" Text="Module Details" />
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>

                                    <StackPanel
                                        Grid.Row="0"
                                        Grid.Column="0"
                                        Margin="0,0,10,15">
                                        <TextBlock Style="{StaticResource LabelText}" Text="Semester" />
                                        <TextBlock
                                            Style="{StaticResource ValueText}"
                                            Text="{Binding Module.Semester.Name, FallbackValue='Winter 2024/25'}"
                                            Visibility="{Binding IsEditMode, Converter={StaticResource InverseBoolToVisibilityConverter}}" />
                                        <ComboBox
                                            ItemsSource="{Binding Semesters}"
                                            SelectedItem="{Binding NewSelectedSemester, Mode=TwoWay}"
                                            Style="{StaticResource GradientComboBox}"
                                            Visibility="{Binding IsEditMode, Converter={StaticResource BoolToVisibilityConverter}}">
                                            <ComboBox.ItemTemplate>
                                                <DataTemplate>
                                                    <TextBlock Foreground="White" Text="{Binding Name}" />
                                                </DataTemplate>
                                            </ComboBox.ItemTemplate>
                                        </ComboBox>
                                    </StackPanel>

                                    <StackPanel
                                        Grid.Row="0"
                                        Grid.Column="1"
                                        Margin="10,0,0,15">
                                        <TextBlock Style="{StaticResource LabelText}" Text="Created" />
                                        <TextBlock Style="{StaticResource ValueText}" Text="{Binding Module.CreatedString, FallbackValue='15.01.2024'}" />
                                    </StackPanel>

                                    <StackPanel
                                        Grid.Row="1"
                                        Grid.Column="0"
                                        Margin="0,0,10,15">
                                        <TextBlock Style="{StaticResource LabelText}" Text="Exam Date" />
                                        <TextBlock
                                            Style="{StaticResource ValueText}"
                                            Text="{Binding Module.ExamDateString, FallbackValue='15.07.2024', TargetNullValue='Not Set'}"
                                            Visibility="{Binding IsEditMode, Converter={StaticResource InverseBoolToVisibilityConverter}}" />
                                        <DatePicker
                                            SelectedDate="{Binding NewExameDate, Mode=TwoWay}"
                                            Style="{StaticResource GradientDatePicker}"
                                            Visibility="{Binding IsEditMode, Converter={StaticResource BoolToVisibilityConverter}}" />
                                    </StackPanel>

                                    <StackPanel
                                        Grid.Row="1"
                                        Grid.Column="1"
                                        Margin="10,0,0,15">
                                        <TextBlock Style="{StaticResource LabelText}" Text="Days till Exam" />
                                        <TextBlock Style="{StaticResource ValueText}" Text="{Binding DayTillExam, FallbackValue='Unknown'}" />
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                        </Border>

                        <Border Style="{StaticResource InfoCard}">
                            <StackPanel>
                                <TextBlock Style="{StaticResource HeaderText}" Text="Study Progress" />
                                <Grid Margin="0,0,0,15">
                                    <ProgressBar
                                        Height="20"
                                        Background="#2A2D35"
                                        Foreground="#1762ad"
                                        Maximum="{Binding TotalMinutesGoal}"
                                        Style="{StaticResource RoundedProgressBar}"
                                        Value="{Binding Module.LearnedMinutes}" />
                                </Grid>

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0">
                                        <TextBlock Style="{StaticResource LabelText}" Text="Sessions" />
                                        <TextBlock Style="{StaticResource ValueText}" Text="{Binding SessionCount, FallbackValue=5}" />
                                    </StackPanel>

                                    <StackPanel Grid.Column="1">
                                        <TextBlock Style="{StaticResource LabelText}" Text="Avg. Session" />
                                        <TextBlock Style="{StaticResource ValueText}" Text="{Binding AverageSessionTime}" />
                                    </StackPanel>

                                    <StackPanel Grid.Column="2" ToolTip="Time is calculated based on ECTS Points, minus a Lecture threshold of around 900min">
                                        <TextBlock Style="{StaticResource LabelText}" Text="Goal" />
                                        <TextBlock Style="{StaticResource ValueText}" Text="{Binding LearnTimeGoal, FallbackValue=12}" />
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                        </Border>
                    </StackPanel>

                    <!--  Right Column  -->
                    <StackPanel Grid.Column="1">
                        <Border Style="{StaticResource InfoCard}">
                            <StackPanel>
                                <TextBlock Style="{StaticResource HeaderText}" Text="Quick Actions" />
                                <Button
                                    Margin="0,0,0,10"
                                    Padding="12,8"
                                    Style="{StaticResource GradientButton}">
                                    <StackPanel Orientation="Horizontal">
                                        <MaIc:MaterialIcon
                                            Width="16"
                                            Height="16"
                                            Margin="0,0,8,0"
                                            Kind="Play" />
                                        <TextBlock Text="Start Study Session" />
                                    </StackPanel>
                                </Button>

                                <Button
                                    Margin="0,0,0,10"
                                    Padding="12,8"
                                    Command="{Binding OpenModuleStatisticsCommand}"
                                    Style="{StaticResource GrayGradientButton}">
                                    <StackPanel Orientation="Horizontal">
                                        <MaIc:MaterialIcon
                                            Width="16"
                                            Height="16"
                                            Margin="0,0,8,0"
                                            Kind="ChartLine" />
                                        <TextBlock Text="View Statistics" />
                                    </StackPanel>
                                </Button>
                                <Button
                                    Margin="0,0,0,10"
                                    Padding="12,8"
                                    Style="{StaticResource GreenGradientButton}">
                                    <StackPanel Orientation="Horizontal">
                                        <MaIc:MaterialIcon
                                            Width="16"
                                            Height="16"
                                            Margin="0,0,8,0"
                                            Kind="PartyPopper" />
                                        <TextBlock Text="Exam passed!" />
                                    </StackPanel>
                                </Button>

                                <Button
                                    Padding="12,8"
                                    Command="{Binding FailedExamCommand}"
                                    Style="{StaticResource RedGradientButton}">
                                    <StackPanel Orientation="Horizontal">
                                        <MaIc:MaterialIcon
                                            Width="16"
                                            Height="16"
                                            Margin="0,0,8,0"
                                            Kind="EmojiSad" />
                                        <TextBlock Text="Exam failed!" />
                                    </StackPanel>
                                </Button>

                            </StackPanel>
                        </Border>

                        <!--  Recent Activity  -->
                        <Border Style="{StaticResource InfoCard}">
                            <StackPanel>
                                <TextBlock Style="{StaticResource HeaderText}" Text="Recent Activity" />

                                <ScrollViewer
                                    MaxHeight="300"
                                    HorizontalScrollBarVisibility="Disabled"
                                    VerticalScrollBarVisibility="Auto">
                                    <ScrollViewer.Resources>
                                        <Style BasedOn="{StaticResource LocalScrollBar}" TargetType="ScrollBar" />
                                    </ScrollViewer.Resources>

                                    <Grid>
                                        <ItemsControl ItemsSource="{Binding RecentSessions}">
                                            <ItemsControl.Style>
                                                <Style TargetType="ItemsControl">
                                                    <Setter Property="Visibility" Value="Visible" />
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding RecentSessions.Count}" Value="0">
                                                            <Setter Property="Visibility" Value="Collapsed" />
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </ItemsControl.Style>

                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Border
                                                        Margin="0,0,0,8"
                                                        Padding="10"
                                                        Background="#2A2D35"
                                                        CornerRadius="6">
                                                        <Grid>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="Auto" />
                                                                <ColumnDefinition Width="*" />
                                                            </Grid.ColumnDefinitions>

                                                            <!--  Icon  -->
                                                            <Border
                                                                Grid.Column="0"
                                                                Width="40"
                                                                Height="40"
                                                                Margin="0,0,12,0"
                                                                Background="#3A3D45"
                                                                CornerRadius="20">
                                                                <MaIc:MaterialIcon
                                                                    Width="20"
                                                                    Height="20"
                                                                    HorizontalAlignment="Center"
                                                                    VerticalAlignment="Center"
                                                                    Foreground="{Binding SessionCompleted, Converter={StaticResource SessionCompletedColorConverter}}"
                                                                    Kind="{Binding SessionCompleted, Converter={StaticResource PomodoroRecentSessionsIconConverter}}" />
                                                            </Border>

                                                            <!--  Session Info  -->
                                                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                                <TextBlock
                                                                    FontSize="12"
                                                                    FontWeight="SemiBold"
                                                                    Foreground="#E0E0E0"
                                                                    Text="{Binding LearnedModule.Name, FallbackValue='Study Session', TargetNullValue='Study Session'}"
                                                                    TextTrimming="CharacterEllipsis" />
                                                                <TextBlock
                                                                    Margin="0,2,0,0"
                                                                    FontSize="10"
                                                                    Foreground="#A0AEC0">
                                                                    <Run Text="{Binding EndTime, Converter={StaticResource TimeAgoConverter}, Mode=OneWay}" />
                                                                    <Run Text=" • " />
                                                                    <Run Text="{Binding CurrentLearnedMinutes, Converter={StaticResource MinutesToDurationConverter}, Mode=OneWay}" />
                                                                </TextBlock>
                                                            </StackPanel>
                                                        </Grid>
                                                    </Border>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>

                                        <TextBlock
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            FontSize="13"
                                            Foreground="#A0AEC0"
                                            Text="No recent activity yet."
                                            TextAlignment="Center"
                                            TextWrapping="Wrap">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Visibility" Value="Collapsed" />
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding RecentSessions.Count}" Value="0">
                                                            <Setter Property="Visibility" Value="Visible" />
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </Grid>
                                </ScrollViewer>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Grid>

            </Grid>
        </ScrollViewer>
    </Grid>
</UserControl>