<UserControl
    x:Class="AioStudy.UI.Views.DashboardView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:AioStudy.UI.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="clr-namespace:AioStudy.UI.ViewModels"
    d:DataContext="{d:DesignInstance Type=viewmodels:DashboardViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid VerticalAlignment="Center">
        <StackPanel>
            <TextBlock
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="24"
                Foreground="White"
                Text="Dashboard View" />
            <Button Command="{Binding StartTimerCommand}">
                StartTimer
            </Button>
            <Button Command="{Binding PauseTimerCommand}">
                PauseTimer
            </Button>
            <Button Command="{Binding ResumeTimerCommand}">
                ResumeTimer
            </Button>

            <TextBox
                Width="200"
                Height="20"
                Text="{Binding Text, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

            <!--  Debug TextBlock zum Testen  -->
            <TextBlock
                Margin="0,10,0,0"
                HorizontalAlignment="Center"
                Foreground="Yellow"
                Text="{Binding Remaining, StringFormat={}{0:hh\\:mm\\:ss}}" />
        </StackPanel>
    </Grid>
</UserControl>
