<UserControl
    x:Class="AioStudy.UI.Views.GradesView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:MaIc="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
    xmlns:charts="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:AioStudy.UI.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="clr-namespace:AioStudy.UI.ViewModels"
    d:DataContext="{d:DesignInstance Type=viewmodels:GradesViewModel}"
    d:DesignHeight="750"
    d:DesignWidth="1200"
    Background="#212226"
    mc:Ignorable="d">

    <UserControl.Resources>
        <!--  Module List Item Style  -->
        <Style x:Key="ModuleListItem" TargetType="Border">
            <Setter Property="Background" Value="#2A2D35" />
            <Setter Property="CornerRadius" Value="8" />
            <Setter Property="Padding" Value="15,12" />
            <Setter Property="Margin" Value="0,0,0,8" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5" />
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <TranslateTransform Y="0" />
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#353842" />
                    <Setter Property="RenderTransform">
                        <Setter.Value>
                            <TranslateTransform Y="-2" />
                        </Setter.Value>
                    </Setter>
                </Trigger>
                <EventTrigger RoutedEvent="MouseEnter">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation
                                Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
                                To="-3"
                                Duration="0:0:0.15">
                                <DoubleAnimation.EasingFunction>
                                    <QuadraticEase EasingMode="EaseOut" />
                                </DoubleAnimation.EasingFunction>
                            </DoubleAnimation>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
                <EventTrigger RoutedEvent="MouseLeave">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation
                                Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
                                To="0"
                                Duration="0:0:0.15">
                                <DoubleAnimation.EasingFunction>
                                    <QuadraticEase EasingMode="EaseOut" />
                                </DoubleAnimation.EasingFunction>
                            </DoubleAnimation>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Style.Triggers>
        </Style>


        <Style x:Key="ChartCard" TargetType="Border">
            <Setter Property="Background" Value="#1F2024" />
            <Setter Property="CornerRadius" Value="12" />
            <Setter Property="Padding" Value="20" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="BorderBrush" Value="#3A3D45" />

            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect
                        BlurRadius="12"
                        Opacity="0.36"
                        ShadowDepth="3"
                        Color="#000000" />
                </Setter.Value>
            </Setter>
        </Style>

        <!--  Metric Card Style  -->
        <Style x:Key="MetricCard" TargetType="Border">
            <Setter Property="Background" Value="#1F2024" />
            <Setter Property="CornerRadius" Value="8" />
            <Setter Property="Padding" Value="15" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="BorderBrush" Value="#3A3D45" />
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect
                        BlurRadius="6"
                        Opacity="0.36"
                        ShadowDepth="2"
                        Color="#000000" />
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="#3A424C" />
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect
                                BlurRadius="18"
                                Opacity="0.32"
                                ShadowDepth="6"
                                Color="#000000" />
                        </Setter.Value>
                    </Setter>
                    <Setter Property="RenderTransform">
                        <Setter.Value>
                            <TranslateTransform Y="-2" />
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!--  Label Style  -->
        <Style x:Key="LabelText" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12" />
            <Setter Property="Foreground" Value="#A0AEC0" />
            <Setter Property="FontWeight" Value="SemiBold" />
        </Style>

        <!--  Scrollbar Styles  -->
        <Style x:Key="LocalScrollBarThumb" TargetType="Thumb">
            <Setter Property="Background" Value="#4A4D55" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Thumb">
                        <Border
                            Background="#4A4D55"
                            CornerRadius="3"
                            Opacity="0.6" />
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="LocalScrollBar" TargetType="ScrollBar">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Width" Value="8" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ScrollBar">
                        <Grid Width="8" Background="Transparent">
                            <Track Name="PART_Track" IsDirectionReversed="true">
                                <Track.DecreaseRepeatButton>
                                    <RepeatButton
                                        Background="Transparent"
                                        Command="ScrollBar.PageUpCommand"
                                        Opacity="0" />
                                </Track.DecreaseRepeatButton>
                                <Track.Thumb>
                                    <Thumb Style="{StaticResource LocalScrollBarThumb}" />
                                </Track.Thumb>
                                <Track.IncreaseRepeatButton>
                                    <RepeatButton
                                        Background="Transparent"
                                        Command="ScrollBar.PageDownCommand"
                                        Opacity="0" />
                                </Track.IncreaseRepeatButton>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!--  Semester ComboBox Style  -->
        <Style x:Key="SemesterComboBoxStyle" TargetType="ComboBox">
            <Setter Property="BorderThickness" Value="1.5" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Height" Value="40" />
            <Setter Property="Padding" Value="12,0" />
            <Setter Property="Background" Value="#2A2D35" />
            <Setter Property="BorderBrush">
                <Setter.Value>
                    <LinearGradientBrush>
                        <GradientStop Offset="0.0" Color="#608BC1" />
                        <GradientStop Offset="1.0" Color="#133E87" />
                        <GradientStop Offset="0.7" Color="#a5bacc" />
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <Border
                                x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="30" />
                                    </Grid.ColumnDefinitions>

                                    <!--  Toggle Button  -->
                                    <ToggleButton
                                        Grid.ColumnSpan="3"
                                        Panel.ZIndex="0"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Focusable="False"
                                        IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}">
                                        <ToggleButton.Template>
                                            <ControlTemplate TargetType="ToggleButton">
                                                <Border Background="Transparent" />
                                            </ControlTemplate>
                                        </ToggleButton.Template>
                                    </ToggleButton>

                                    <!--  Placeholder  -->
                                    <TextBlock
                                        x:Name="PlaceholderText"
                                        Grid.Column="0"
                                        Margin="12,0,0,0"
                                        VerticalAlignment="Center"
                                        Panel.ZIndex="1"
                                        FontSize="14"
                                        Foreground="#A0AEC0"
                                        IsHitTestVisible="False"
                                        Text="All Semesters"
                                        Visibility="Collapsed" />

                                    <!--  Selected Content  -->
                                    <TextBlock
                                        x:Name="SelectedContent"
                                        Grid.Column="0"
                                        Margin="12,0,0,0"
                                        VerticalAlignment="Center"
                                        Panel.ZIndex="1"
                                        FontSize="14"
                                        FontWeight="Medium"
                                        Foreground="White"
                                        IsHitTestVisible="False"
                                        Text="{Binding SelectedItem.Name, RelativeSource={RelativeSource TemplatedParent}}"
                                        TextTrimming="CharacterEllipsis" />

                                    <!--  Clear Button  -->
                                    <Button
                                        x:Name="PART_ClearButton"
                                        Grid.Column="1"
                                        Width="20"
                                        Height="20"
                                        Margin="0,0,0,0"
                                        VerticalAlignment="Center"
                                        Panel.ZIndex="2"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Command="{Binding DataContext.ClearSemesterCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                        Cursor="Hand"
                                        Focusable="False"
                                        Visibility="Visible">
                                        <Button.Template>
                                            <ControlTemplate TargetType="Button">
                                                <Grid Background="Transparent">
                                                    <Ellipse
                                                        x:Name="ellipse"
                                                        Width="18"
                                                        Height="18"
                                                        Fill="#3A3D45" />
                                                    <Path
                                                        Width="8"
                                                        Height="8"
                                                        HorizontalAlignment="Center"
                                                        VerticalAlignment="Center"
                                                        Data="M 0,0 L 8,8 M 8,0 L 0,8"
                                                        Stretch="Fill"
                                                        Stroke="White"
                                                        StrokeThickness="1.5" />
                                                </Grid>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="ellipse" Property="Fill" Value="#FF6B6B" />
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Button.Template>
                                    </Button>

                                    <!--  Dropdown Arrow  -->
                                    <MaIc:MaterialIcon
                                        x:Name="DropdownArrow"
                                        Grid.Column="2"
                                        Width="16"
                                        Height="16"
                                        Margin="0,0,10,0"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Panel.ZIndex="1"
                                        Foreground="#B0B3BA"
                                        IsHitTestVisible="False"
                                        Kind="ChevronDown" />
                                </Grid>
                            </Border>

                            <!--  Popup  -->
                            <Popup
                                x:Name="PART_Popup"
                                AllowsTransparency="True"
                                Focusable="False"
                                IsOpen="{TemplateBinding IsDropDownOpen}"
                                Placement="Bottom"
                                PopupAnimation="Slide">
                                <Border
                                    MinWidth="{TemplateBinding ActualWidth}"
                                    MaxHeight="250"
                                    Margin="0,5,0,0"
                                    Background="#2A2D35"
                                    BorderBrush="#608BC1"
                                    BorderThickness="1"
                                    CornerRadius="6">
                                    <Border.Effect>
                                        <DropShadowEffect
                                            BlurRadius="15"
                                            Direction="270"
                                            Opacity="0.4"
                                            ShadowDepth="5"
                                            Color="#000000" />
                                    </Border.Effect>
                                    <ScrollViewer
                                        MaxHeight="250"
                                        HorizontalScrollBarVisibility="Disabled"
                                        VerticalScrollBarVisibility="Auto">
                                        <ScrollViewer.Resources>
                                            <Style BasedOn="{StaticResource LocalScrollBar}" TargetType="ScrollBar" />
                                        </ScrollViewer.Resources>
                                        <ItemsPresenter />
                                    </ScrollViewer>
                                </Border>
                            </Popup>
                        </Grid>

                        <ControlTemplate.Triggers>
                            <!--  Wenn nichts ausgewählt  -->
                            <Trigger Property="SelectedItem" Value="{x:Null}">
                                <Setter TargetName="PlaceholderText" Property="Visibility" Value="Visible" />
                                <Setter TargetName="SelectedContent" Property="Visibility" Value="Collapsed" />
                                <Setter TargetName="PART_ClearButton" Property="Visibility" Value="Collapsed" />
                            </Trigger>

                            <!--  Hover Effect  -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#353842" />
                            </Trigger>

                            <!--  Dropdown Open  -->
                            <Trigger Property="IsDropDownOpen" Value="True">
                                <Setter TargetName="DropdownArrow" Property="Kind" Value="ChevronUp" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!--  Semester ComboBoxItem Style  -->
        <Style x:Key="SemesterComboBoxItemStyle" TargetType="ComboBoxItem">
            <Setter Property="Height" Value="38" />
            <Setter Property="Padding" Value="12,8" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBoxItem">
                        <Border
                            x:Name="border"
                            Padding="{TemplateBinding Padding}"
                            Background="{TemplateBinding Background}"
                            Cursor="Hand">
                            <TextBlock
                                VerticalAlignment="Center"
                                FontSize="14"
                                Foreground="White"
                                Text="{Binding Name}"
                                TextTrimming="CharacterEllipsis" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsHighlighted" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#3A3D45" />
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#4A4D55" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>


    </UserControl.Resources>

    <Grid x:Name="LayoutRoot">
        <Grid.RowDefinitions>
            <RowDefinition Height="80" />
            <RowDefinition Height="1" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  HEADER (fixiert)  -->
        <Grid Grid.Row="0" Margin="30,0,30,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" VerticalAlignment="Center">
                <TextBlock
                    Margin="0,0,0,4"
                    FontSize="32"
                    FontWeight="Bold"
                    Foreground="White"
                    Text="Grades Overview" />
                <TextBlock
                    FontSize="14"
                    Foreground="#B0B3BA"
                    Text="Track your academic performance across all semesters" />
            </StackPanel>

            <!--  Semester Filter & Actions  -->
            <StackPanel
                x:Name="ActionsPanel"
                Grid.Column="1"
                VerticalAlignment="Center"
                Orientation="Horizontal">

                <CheckBox
                    Margin="0,0,25,0"
                    Content="Include 5,0"
                    IsChecked="{Binding IncludeFailedBool}"
                    Style="{StaticResource GradientCheckBox}" />

                <ComboBox
                    Width="200"
                    Margin="0,0,15,0"
                    ItemContainerStyle="{StaticResource SemesterComboBoxItemStyle}"
                    ItemsSource="{Binding Semesters}"
                    SelectedItem="{Binding SelectedSemester}"
                    Style="{StaticResource SemesterComboBoxStyle}" />

                <Button
                    Width="45"
                    Margin="0,0,15,0"
                    Command="{Binding RefreshCommand}"
                    Style="{StaticResource GradientButton}"
                    ToolTip="Refresh Grades">
                    <MaIc:MaterialIcon
                        Width="22"
                        Height="22"
                        Kind="Refresh" />
                </Button>

                <Button
                    Padding="20,8"
                    Command="{Binding ExportGradeListCommand}"
                    Style="{StaticResource GrayGradientButton}"
                    ToolTip="Export Grades">
                    <StackPanel Orientation="Horizontal">
                        <MaIc:MaterialIcon
                            Width="16"
                            Height="16"
                            Margin="0,0,6,0"
                            Kind="Export" />
                        <TextBlock FontSize="14" Text="Export" />
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>

        <Border
            Grid.Row="1"
            Height="1"
            Margin="30,0"
            Background="#3A3D45" />

        <!--  SCROLLABLE CONTENT  -->
        <ScrollViewer
            Grid.Row="2"
            Margin="20,20"
            HorizontalScrollBarVisibility="Disabled"
            VerticalScrollBarVisibility="Auto">
            <ScrollViewer.Resources>
                <Style BasedOn="{StaticResource LocalScrollBar}" TargetType="ScrollBar" />
            </ScrollViewer.Resources>

            <Grid Margin="10,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!--  QUICK METRICS  -->
                <Grid Grid.Row="0" Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <!--  Average Grade  -->
                    <Border
                        Grid.Column="0"
                        Margin="0,5,10,0"
                        Style="{StaticResource MetricCard}">
                        <StackPanel>
                            <StackPanel Margin="0,0,0,8" Orientation="Horizontal">
                                <MaIc:MaterialIcon
                                    Width="20"
                                    Height="20"
                                    Margin="0,0,8,0"
                                    Foreground="#4FD1C7"
                                    Kind="ChartLine" />
                                <TextBlock Style="{StaticResource LabelText}" Text="Average" />
                            </StackPanel>
                            <TextBlock
                                FontSize="28"
                                FontWeight="Bold"
                                Foreground="#4FD1C7"
                                Text="{Binding AverageGrade, StringFormat='{}{0:F2}', FallbackValue='1.85'}" />
                            <TextBlock
                                FontSize="11"
                                Foreground="#A0AEC0"
                                Text="Overall GPA" />
                        </StackPanel>
                    </Border>

                    <!--  Total Modules  -->
                    <Border
                        Grid.Column="1"
                        Margin="0,5,10,0"
                        Style="{StaticResource MetricCard}">
                        <StackPanel>
                            <StackPanel Margin="0,0,0,8" Orientation="Horizontal">
                                <MaIc:MaterialIcon
                                    Width="20"
                                    Height="20"
                                    Margin="0,0,8,0"
                                    Foreground="#608BC1"
                                    Kind="BookOpenPageVariant" />
                                <TextBlock Style="{StaticResource LabelText}" Text="Modules" />
                            </StackPanel>
                            <TextBlock
                                FontSize="28"
                                FontWeight="Bold"
                                Foreground="#608BC1"
                                Text="{Binding TotalModules, FallbackValue='12'}" />
                            <TextBlock
                                FontSize="11"
                                Foreground="#A0AEC0"
                                Text="Total Graded" />
                        </StackPanel>
                    </Border>

                    <!--  Total Credits  -->
                    <Border
                        Grid.Column="2"
                        Margin="0,5,10,0"
                        Style="{StaticResource MetricCard}">
                        <StackPanel>
                            <StackPanel Margin="0,0,0,8" Orientation="Horizontal">
                                <MaIc:MaterialIcon
                                    Width="20"
                                    Height="20"
                                    Margin="0,0,8,0"
                                    Foreground="#F6E05E"
                                    Kind="Star" />
                                <TextBlock Style="{StaticResource LabelText}" Text="Credits" />
                            </StackPanel>
                            <TextBlock
                                FontSize="28"
                                FontWeight="Bold"
                                Foreground="#F6E05E"
                                Text="{Binding TotalCredits, FallbackValue='72'}" />
                            <TextBlock
                                FontSize="11"
                                Foreground="#A0AEC0"
                                Text="ECTS Earned" />
                        </StackPanel>
                    </Border>

                    <!--  Best Grade  -->
                    <Border
                        Grid.Column="3"
                        Margin="0,5,10,0"
                        Style="{StaticResource MetricCard}">
                        <StackPanel>
                            <StackPanel Margin="0,0,0,8" Orientation="Horizontal">
                                <MaIc:MaterialIcon
                                    Width="20"
                                    Height="20"
                                    Margin="0,0,8,0"
                                    Foreground="#68D391"
                                    Kind="TrophyOutline" />
                                <TextBlock Style="{StaticResource LabelText}" Text="Best" />
                            </StackPanel>
                            <TextBlock
                                FontSize="28"
                                FontWeight="Bold"
                                Foreground="#68D391"
                                Text="{Binding BestGrade, StringFormat='{}{0:F1}', FallbackValue='1.0'}" />
                            <TextBlock
                                FontSize="11"
                                Foreground="#A0AEC0"
                                Text="Best Grade" />
                        </StackPanel>
                    </Border>

                    <!--  Worst Grade  -->
                    <Border
                        Grid.Column="4"
                        Margin="0,5,0,0"
                        Style="{StaticResource MetricCard}">
                        <StackPanel>
                            <StackPanel Margin="0,0,0,8" Orientation="Horizontal">
                                <MaIc:MaterialIcon
                                    Width="20"
                                    Height="20"
                                    Margin="0,0,8,0"
                                    Foreground="#FC8181"
                                    Kind="AlertCircleOutline" />
                                <TextBlock Style="{StaticResource LabelText}" Text="Worst" />
                            </StackPanel>
                            <TextBlock
                                FontSize="28"
                                FontWeight="Bold"
                                Foreground="#FC8181"
                                Text="{Binding WorstGrade, StringFormat='{}{0:F1}', FallbackValue='2.7'}" />
                            <TextBlock
                                FontSize="11"
                                Foreground="#A0AEC0"
                                Text="Worst Grade" />
                        </StackPanel>
                    </Border>
                </Grid>

                <!--  CHARTS  -->
                <Grid Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <!--  Balkendiagramm: Module Grades  -->
                    <Border
                        Grid.Row="0"
                        Grid.Column="0"
                        Margin="0,0,10,10"
                        Style="{StaticResource ChartCard}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="300" />
                            </Grid.RowDefinitions>

                            <TextBlock
                                Grid.Row="0"
                                Margin="0,0,0,15"
                                FontSize="18"
                                FontWeight="SemiBold"
                                Foreground="White"
                                Text="Module Grades" />

                            <charts:CartesianChart
                                Grid.Row="1"
                                Series="{Binding GradesSeries}"
                                XAxes="{Binding XAxes}"
                                YAxes="{Binding YAxes}" />
                        </Grid>
                    </Border>

                    <!--  Kreisdiagramm Grade  -->
                    <Border
                        Grid.Row="0"
                        Grid.Column="1"
                        Margin="10,0,0,10"
                        Style="{StaticResource ChartCard}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="300" />
                            </Grid.RowDefinitions>

                            <TextBlock
                                Grid.Row="0"
                                Margin="0,0,0,15"
                                FontSize="18"
                                FontWeight="SemiBold"
                                Foreground="White"
                                Text="Grade Distribution" />

                            <charts:PieChart Grid.Row="1" Series="{Binding GradeDistributionSeries}" />
                        </Grid>
                    </Border>


                    <!--  Module Liste  -->
                    <Border
                        Grid.Row="1"
                        Grid.ColumnSpan="2"
                        Margin="0,10,0,10"
                        Style="{StaticResource ChartCard}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <TextBlock
                                Grid.Row="0"
                                Margin="0,0,0,15"
                                FontSize="18"
                                FontWeight="SemiBold"
                                Foreground="White"
                                Text="All Graded Modules" />

                            <!--  Module Liste  -->
                            <ItemsControl Grid.Row="1" ItemsSource="{Binding GradedModules}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Style="{StaticResource ModuleListItem}">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto" />
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="Auto" />
                                                    <ColumnDefinition Width="80" />
                                                    <ColumnDefinition Width="55" />
                                                </Grid.ColumnDefinitions>

                                                <!--  Farbindikator  -->
                                                <Border
                                                    Grid.Column="0"
                                                    Width="4"
                                                    Height="35"
                                                    Margin="0,0,12,0"
                                                    Background="{Binding Color, Converter={StaticResource StringToBrushConverter}, FallbackValue=#608BC1}"
                                                    CornerRadius="2" />

                                                <!--  Modul Name + Semester  -->
                                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock
                                                            FontSize="14"
                                                            FontWeight="SemiBold"
                                                            Foreground="White"
                                                            Text="{Binding Name}"
                                                            TextTrimming="CharacterEllipsis" />
                                                        <!--  KeyCompetence Badge  -->
                                                        <Border
                                                            Margin="8,0,0,0"
                                                            Padding="6,2"
                                                            VerticalAlignment="Center"
                                                            Background="#9F7AEA"
                                                            CornerRadius="4"
                                                            Visibility="{Binding IsKeyCompetence, Converter={StaticResource BoolToVisibilityConverter}}">
                                                            <TextBlock
                                                                FontSize="9"
                                                                FontWeight="Bold"
                                                                Foreground="White"
                                                                Text="KEY" />
                                                        </Border>
                                                    </StackPanel>
                                                    <TextBlock
                                                        Margin="0,2,0,0"
                                                        FontSize="11"
                                                        Foreground="#A0AEC0"
                                                        Text="{Binding Semester.Name, FallbackValue='No Semester'}" />
                                                </StackPanel>

                                                <!--  Credits  -->
                                                <Border
                                                    Grid.Column="3"
                                                    Margin="10,0"
                                                    Padding="8,5"
                                                    VerticalAlignment="Center"
                                                    Background="#3A3D45"
                                                    CornerRadius="12">
                                                    <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                                                        <TextBlock
                                                            Width="18"
                                                            FontSize="13"
                                                            FontWeight="Bold"
                                                            Foreground="#F6E05E"
                                                            Text="{Binding ModuleCredits, FallbackValue=0}"
                                                            TextAlignment="Right" />
                                                        <TextBlock
                                                            Margin="4,0,0,0"
                                                            FontSize="11"
                                                            Foreground="#A0AEC0"
                                                            Text="ECTS" />
                                                    </StackPanel>
                                                </Border>

                                                <!--  Note  -->
                                                <Border
                                                    Grid.Column="4"
                                                    Padding="10,5"
                                                    VerticalAlignment="Center"
                                                    Background="{Binding Grade, Converter={StaticResource GradeToBackgroundConverter}, FallbackValue=#9F7AEA}"
                                                    CornerRadius="12">
                                                    <TextBlock
                                                        HorizontalAlignment="Center"
                                                        FontSize="14"
                                                        FontWeight="Bold"
                                                        Foreground="White"
                                                        Text="{Binding Grade, Converter={StaticResource GradeToDisplayTextConverter}, FallbackValue='N/A'}">
                                                        <TextBlock.Effect>
                                                            <DropShadowEffect
                                                                BlurRadius="6"
                                                                Direction="270"
                                                                Opacity="0.6"
                                                                ShadowDepth="1"
                                                                Color="#000000" />
                                                        </TextBlock.Effect>
                                                    </TextBlock>
                                                </Border>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                            <!--  Empty State  -->
                            <StackPanel
                                Grid.Row="1"
                                Margin="0,20"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center">
                                <StackPanel.Style>
                                    <Style TargetType="StackPanel">
                                        <Setter Property="Visibility" Value="Collapsed" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding GradedModules.Count}" Value="0">
                                                <Setter Property="Visibility" Value="Visible" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </StackPanel.Style>
                                <MaIc:MaterialIcon
                                    Width="40"
                                    Height="40"
                                    Foreground="#4A4D55"
                                    Kind="SchoolOutline" />
                                <TextBlock
                                    Margin="0,10,0,0"
                                    FontSize="14"
                                    Foreground="#6B7280"
                                    Text="No graded modules yet" />
                            </StackPanel>
                        </Grid>
                    </Border>

                </Grid>
            </Grid>
        </ScrollViewer>
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup x:Name="AdaptiveStates">
                <VisualState x:Name="Wide">
                    <Storyboard>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ActionsPanel" Storyboard.TargetProperty="Visibility">
                            <DiscreteObjectKeyFrame KeyTime="0:0:0">
                                <DiscreteObjectKeyFrame.Value>
                                    <Visibility>Visible</Visibility>
                                </DiscreteObjectKeyFrame.Value>
                            </DiscreteObjectKeyFrame>
                        </ObjectAnimationUsingKeyFrames>
                    </Storyboard>
                </VisualState>

                <VisualState x:Name="Narrow">
                    <Storyboard>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ActionsPanel" Storyboard.TargetProperty="Visibility">
                            <DiscreteObjectKeyFrame KeyTime="0:0:0">
                                <DiscreteObjectKeyFrame.Value>
                                    <Visibility>Collapsed</Visibility>
                                </DiscreteObjectKeyFrame.Value>
                            </DiscreteObjectKeyFrame>
                        </ObjectAnimationUsingKeyFrames>
                    </Storyboard>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
    </Grid>
</UserControl>